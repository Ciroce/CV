    }
  }
function validateFormContactoCodigoPostal() {
    let nombre = document.getElementById("codigoPostal"); 
    if (nombre.value.length > 2) {
        campoCodigoPostal=true;
        document.getElementById("codigoPostal").classList.remove("error");
